{
  "compilerOptions": {
    "target": "es2020",
    "module": "ES6",
    "moduleResolution": "node",
    "rootDirs": ["./src", "./server"],
    "typeRoots": ["./types"],
    "allowJs": true,
    "outDir": ".dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
